<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_dining_restuarant_hint"/>
        <EditText
            android:id="@+id/new_dining_restuarant_input"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:hint="@string/new_dining_restuarant_hint_input"
            android:inputType="text"/>
        <Button
            android:id="@+id/new_dining_restuarant_choose"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:enabled="false"
            android:text="@string/new_dining_restuarant_choose"/>
        </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/new_dining_cost_hint"/>
        <EditText
            android:id="@+id/new_dining_cost"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/new_dining_cost_hint_input"
            android:inputType="numberDecimal"/>
        </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/new_dining_date_hint"/>
        <Button
            android:id="@+id/new_dining_show_date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showDatePicker"/>
        <Button
            android:id="@+id/new_dining_show_time_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showTimePicker"/>
        </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/new_dining_mate_hint"/>
            <Button
                android:id="@+id/new_dining_mate_add"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/new_dining_mate_choose_hint"
                android:onClick="chooseParticipants"/>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/new_dining_mate_list"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"/>
        </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/new_dining_paid_hint"/>
            <Button
                android:id="@+id/new_dining_paid_add"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:enabled="false"
                android:text="@string/new_dining_paid_modify_hint"/>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/new_dining_paid_list"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"/>
        </LinearLayout>
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/new_dining_special_cost_hint"/>
            <Button
                    android:id="@+id/new_dining_paid_add"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:enabled="false"
                    android:text="@string/new_dining_special_cost_add_hint"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/new_dining_paid_list"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"/>
    </LinearLayout>
    <Button
        android:id="@+id/new_dining_submit"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:onClick="submit"
        android:text="@string/new_dining_submit"/>
</LinearLayout>